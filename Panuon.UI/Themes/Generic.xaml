                                           Value="true" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="btnDelete"
                                    Property="Visibility"
                                    Value="Collapsed"></Setter>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected"
                                           Value="false" />
                                <Condition Property="IsMouseOver"
                                           Value="true" />
                            </MultiTrigger.Conditions>
