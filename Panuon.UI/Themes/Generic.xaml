                                    Property="Background"
                                    Value="{Binding CoverBrush,RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" />
                            <Setter TargetName="txtContent"
                                    Property="Opacity"
                                    Value="0.7" />
                            <Setter TargetName="btnDelete"
                                    Property="Opacity"
                                    Value="0.7"></Setter>
