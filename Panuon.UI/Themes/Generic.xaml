                                                    <MultiBinding Converter="{StaticResource ScaleConverter}">
                                                        <Binding Path="InnerWidth"
                                                                 RelativeSource="{RelativeSource AncestorType=CheckBox}"></Binding>
                                                        <Binding Path="InnerHeight"
                                                                 RelativeSource="{RelativeSource AncestorType=CheckBox}"></Binding>
